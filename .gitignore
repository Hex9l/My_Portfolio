<div className="relative z-[3] -mt-12 max-xl:order-1 max-xl:mt-0 perspective-1000">
                    <div
                        ref={avatarRef}
                        className="relative w-[450px] h-[450px] flex flex-col items-center justify-center max-xl:w-[350px] max-xl:h-[350px] max-md:w-[280px] max-md:h-[280px] will-change-transform"
                    >
                        {/* Glow Effect */}
                        <div className={`absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] blur-[80px] z-[0] max-xl:w-[300px] max-xl:h-[300px] transition-colors duration-700 ${isFlipped ? 'bg-[radial-gradient(circle,rgba(255,255,255,0.3),transparent)]' : 'bg-[radial-gradient(circle,rgba(139,92,246,0.4),transparent)]'}`}></div>

                        {/* Flip Card Wrapper */}
                        <div className={`relative w-[400px] h-[400px] max-xl:w-[300px] max-xl:h-[300px] max-md:w-[250px] max-md:h-[250px] transition-transform duration-1000 ease-[cubic-bezier(0.15,0.85,0.35,1)] transform-style-3d will-change-transform ${isFlipped ? 'rotate-y-180' : ''}`}>

                            {/* Front Face: Default Avatar */}
                            <div className="absolute inset-0 backface-hidden bg-transparent flex items-center justify-center">
                                <img
                                    src="/avatar.png"
                                    alt="Henil Avatar"
                                    className="w-full h-full object-contain drop-shadow-[0_20px_50px_rgba(0,0,0,0.6)]"
                                />
                            </div>

                            {/* Back Face: Profile Image */}
                            <div className="absolute inset-0 backface-hidden rotate-y-180 flex items-center justify-center">
                                <img
                                    src="/henil-avatar5.jpg"
                                    alt="Henil Profile"
                                    className="w-[90%] h-[90%] object-contain drop-shadow-[0_20px_50px_rgba(0,0,0,0.6)]"
                                />
                            </div>
                        </div>

                        {/* Flip Trigger Button */}
                        <div className=" z-[10] perspective-1000">
                            <button
                                onClick={() => setIsFlipped(!isFlipped)}
                                className="p-3 max-md:p-2.5 bg-white/10 backdrop-blur-md border border-white/20 rounded-full text-white shadow-lg hover:bg-white/20 hover:scale-105 transition-all duration-300"
                                aria-label="Flip Profile"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className="w-6 h-6 max-md:w-5 max-md:h-5">
